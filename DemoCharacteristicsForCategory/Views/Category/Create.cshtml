@model DemoCharacteristicsForCategory.Models.Forms.CreateCategoryForm

@{
    ViewData["Title"] = "Create";
}

<h4>Add Characteristic</h4>
<div class="row">
    <div class="col-md-4">
        <div id="CharacteristicValidation" class="text-danger"></div>
        <div class="form-group">
            <input id="CharacteristicName" class="form-control" />
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary" onclick="AddCharacteristic()">Add</button>
        </div>
    </div>
</div>
<hr />
<h4>Create Category</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div id="Characteristics">
                @if (Model.Characteristics != null && Model.Characteristics.Count() > 0)
                {
                    <partial name="_Characteristics" model="Model.Characteristics" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
